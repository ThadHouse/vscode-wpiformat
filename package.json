{
    "name": "vscode-wpiformat",
    "displayName": "vscode-wpiformat",
    "description": "A tool to call wpiformat from any file in vscode",
    "version": "0.0.1",
    "publisher": "thadhouse",
    "engines": {
        "vscode": "^1.17.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "keybindings": [
            {
                "command": "extension.wpiformatfile",
                "key": "ctrl+shift+f",
                "when": "editorTextFocus"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "wpiformat configuration",
            "properties": {
                "wpiformat.runFormatOnSave": {
                    "type": "boolean",
                    "default": false,
                    "description": "Run wpiformat on file save"
                },
                "wpiformat.saveOnFormatRequest": {
                    "type": "boolean",
                    "default": false,
                    "description": "Save file before running wpiformat"
                }
            }
        },
        "commands": [
            {
                "command": "extension.wpiformatfile",
                "title": "Run wpiformat on current file",
                "category": "wpiformat"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "editorFocus",
                    "command": "extension.wpiformatfile",
                    "group": "1_modification"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.5.3",
        "vscode": "^1.1.5",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
